<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductCounter_Alpha_.MainPage"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms">
    
    <FlexLayout Padding="5"
                Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">
        
        <zxing:ZXingScannerView IsScanning="True"
                                OnScanResult="ZXingScannerViev_OnScanResult"
                                WidthRequest="250"
                                HeightRequest="250"
                                />
        <Button Text="scan"
                x:Name="scanBtn"/>
        <Label x:Name="label"
               HeightRequest="30"
               />
        <Label Text="GO ON"
               x:Name="scanResultText"
               HeightRequest="30"
               />
        
    </FlexLayout>
    
</ContentPage>
